<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CortezEnzoExamen1.RecargaPage"
             Title="Recarga">
    <StackLayout Padding="20">
        <Entry x:Name="entry_name" Placeholder="Nombre" />
        <Entry x:Name="entry_phone" Placeholder="Número de Teléfono" Keyboard="Telephone" />
        <Button Text="Recargar" Clicked="OnRecargarClicked" />
        <Label x:Name="label_lastRecargaDetails" Text="Última recarga aparecerá aquí" />
    </StackLayout>
</ContentPage>
