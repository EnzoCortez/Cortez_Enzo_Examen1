<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="RecargaApp.RecargaPage"
             Title="Recarga telefónica">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <Label x:Name="label_title" 
                   Text="Recarga telefónica"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"
                   BackgroundColor="Purple" />

            <Entry x:Name="entry_phone"
                   Placeholder="Ingrese el número de teléfono" 
                   Keyboard="Telephone"
                   MaxLength="10" />

            <Entry x:Name="entry_name"
                   Placeholder="Ingrese el nombre de quien realiza la recarga" />

            <Label x:Name="label_lastRecarga"
                   Text="La última recarga realizada fue:"
                   FontSize="16" />

            <Label x:Name="label_lastRecargaDetails"
                   Text="Nombre: XXXXXXX\nNúmero: XXXXXXX"
                   FontSize="14" />

            <Button x:Name="button_recargar"
                    Text="Recargar"
                    BackgroundColor="Purple"
                    TextColor="White"
                    Clicked="OnRecargarClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
