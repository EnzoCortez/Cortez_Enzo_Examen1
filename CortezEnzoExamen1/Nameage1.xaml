<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CortezEnzoExamen1.NamePage">

   

    <Grid RowSpacing="10" ColumnSpacing="10" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Text="Enzo" Grid.Row="0" Grid.Column="0" />
        
        <Label Text="Tomas" Grid.Row="0" Grid.Column="1" />
        <Label Text="Cortez" Grid.Row="1" Grid.Column="0" Style="{StaticResource ApellidoStyle}" />
        <Label Text="Valencia" Grid.Row="1" Grid.Column="1" Style="{StaticResource ApellidoStyle}" />
    </Grid>
</ContentPage>
